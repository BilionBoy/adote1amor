<div class="sidebar sidebar-light sidebar-main sidebar-expand-xl shadow-sm" style="background-color: #f8f9fa;">
  <div class="sidebar-content">
    <!-- Cabeçalho da sidebar -->
    <div class="sidebar-section border-bottom px-3 py-3 d-flex justify-content-between align-items-center">
      <h5 class="mb-0 text-dark fw-semibold">Menu</h5>
      <button type="button" class="btn btn-sm btn-outline-secondary rounded-pill sidebar-mobile-main-toggle d-xl-none">
        <i class="ph-x"></i>
      </button>
    </div>

    <!-- Barra de pesquisa -->
    <div class="px-3 py-2 border-bottom">
      <div class="position-relative">
        <input
          type="search"
          id="sidebar-search-input"
          class="form-control bg-white ps-4"
          placeholder="Pesquisar..."
          onkeyup="filterSidebar()"
        />
        <i class="ph-magnifying-glass position-absolute top-50 start-0 translate-middle-y ms-2 text-muted"></i>
      </div>
    </div>

    <!-- Lista de navegação -->
    <ul class="nav flex-column pt-2 px-2" id="sidebar-items">
      <% sidebar_items = [
        { path: root_path, icon: 'ph-house', label: 'Home' },
        { path: root_path, icon: 'ph-bookmarks', label: 'Publicações' },
        { path: a_especies_path, icon: 'ph-dog', label: 'Espécies' },
        { path: a_portes_path, icon: 'ph-align-right', label: 'Porte' },
        { path: a_cores_path, icon: 'ph-paint-brush-household', label: 'Cor' },
        { path: a_bairros_path, icon: 'ph-buildings', label: 'Bairros' },
        { path: a_estados_path, icon: 'ph-map-pin', label: 'Estados' },
        { path: a_cidades_path, icon: 'ph-map-pin-line', label: 'Cidades' },
        { path: usuarios_g_admin_index_path, icon: 'ph-users', label: 'Usuários' }
      ] %>

      <% sidebar_items.each do |item| %>
        <li class="nav-item">
          <%= link_to item[:path],
            class: "nav-link d-flex align-items-center gap-2 px-3 py-2 rounded text-dark sidebar-link #{current_page?(item[:path]) ? 'active-link' : ''}" do %>
            <i class="<%= item[:icon] %> text-primary"></i>
            <span><%= item[:label] %></span>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<style>
  .sidebar-link:hover {
    background-color: #e2e6ea;
    text-decoration: none;
  }

  .active-link {
    background-color: #dee2e6 !important;
    border-left: 4px solid #0d6efd;
    font-weight: 600;
  }

  .nav-link i {
    font-size: 1.1rem;
  }
</style>

<script>
  function filterSidebar() {
    const input = document.getElementById('sidebar-search-input');
    const filter = input.value.toLowerCase();
    const navItems = document.querySelectorAll('#sidebar-items .nav-item');

    navItems.forEach(item => {
      const text = item.textContent.toLowerCase();
      item.style.display = text.includes(filter) ? '' : 'none';
    });
  }
</script>


<%= render "shared/context_nav", title: t("activerecord.models.#{AAnimal.model_name.i18n_key}.other") do  %>
<span class="breadcrumb-item"><%= link_to t("activerecord.models.#{AAnimal.model_name.i18n_key}.other"), a_animais_path, class: "text-dark" %></span>
<span class="breadcrumb-item active"><%= t("helpers.submit.#{params[:action]}") %></span>
<% end %>
<%= simple_form_for(@a_animal) do |f| %>
<div class="card">
  <div class="card-header">
    <h5 class="my-0">
      <%= @a_animal.new_record? ? "Incluir " : "Editar " %><%= t("activerecord.models.#{AAnimal.model_name.i18n_key}.one") %>
    </h5>
  </div>
  <div class="card-body">
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <div class="row">
      
        
          <div class="col-12">
            <%= f.input :nome, input_html: { class: "capitalize"}, placeholder: "Nome"  %>
          </div>
        
        
          <div class="col-12">
            <%= f.input :idade, input_html: { class: "capitalize"}, placeholder: "Idade"  %>
          </div>
        
        
          <div class="col-12">
            <%= f.input :descricao, input_html: { class: "capitalize"}, placeholder: "Descricao"  %>
          </div>
        
        
          <div class="col-12">
            <%= f.input :castrado, input_html: { class: "capitalize"}, placeholder: "Castrado"  %>
          </div>
        
        
          <div class="col-12">
            <%= f.input :visto_por_ultimo, input_html: { class: "capitalize"}, placeholder: "Visto por ultimo"  %>
          </div>
        
        
          <div class="col-12">
            <%= f.association :a_especie, input_html: { class: "capitalize"}, placeholder: "A especie"  %>
          </div>
        
        
          <div class="col-12">
            <%= f.association :a_cor, input_html: { class: "capitalize"}, placeholder: "A cor"  %>
          </div>
        
        
          <div class="col-12">
            <%= f.association :a_bairro, input_html: { class: "capitalize"}, placeholder: "A bairro"  %>
          </div>
        
        
          <div class="col-12">
            <%= f.association :a_porte, input_html: { class: "capitalize"}, placeholder: "A porte"  %>
          </div>
        
    </div>
  </div>
  <div class="card-footer">
    <%= btn_submit(f) %>
    <%= link_to "Voltar", a_animais_path, class: "btn btn-light" %>
  </div>
</div>
<% end %>
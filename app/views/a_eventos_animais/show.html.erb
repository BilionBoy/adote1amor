<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar A Evento Animal</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @a_evento_animal %>">
          <p>
            <strong>A Animal:</strong>
            <%= @a_evento_animal.a_animal %>
          </p>
          <p>
            <strong>A Tipo Evento:</strong>
            <%= @a_evento_animal.a_tipo_evento %>
          </p>
          <p>
            <strong>A Status:</strong>
            <%= @a_evento_animal.a_status %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_a_evento_animal_path(@a_evento_animal), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", a_eventos_animais_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @a_evento_animal, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>

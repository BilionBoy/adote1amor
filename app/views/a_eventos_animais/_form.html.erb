
<%= render "shared/context_nav", title: t("activerecord.models.#{AEventoAnimal.model_name.i18n_key}.other") do  %>
<span class="breadcrumb-item"><%= link_to t("activerecord.models.#{AEventoAnimal.model_name.i18n_key}.other"), a_eventos_animais_path, class: "text-dark" %></span>
<span class="breadcrumb-item active"><%= t("helpers.submit.#{params[:action]}") %></span>
<% end %>
<%= simple_form_for(@a_evento_animal) do |f| %>
<div class="card">
  <div class="card-header">
    <h5 class="my-0">
      <%= @a_evento_animal.new_record? ? "Incluir " : "Editar " %><%= t("activerecord.models.#{AEventoAnimal.model_name.i18n_key}.one") %>
    </h5>
  </div>
  <div class="card-body">
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <div class="row">
      
        
          <div class="col-12">
            <%= f.association :a_animal, input_html: { class: "capitalize"}, placeholder: "A animal"  %>
          </div>
        
        
          <div class="col-12">
            <%= f.association :a_tipo_evento, input_html: { class: "capitalize"}, placeholder: "A tipo evento"  %>
          </div>
        
        
          <div class="col-12">
            <%= f.association :a_status, input_html: { class: "capitalize"}, placeholder: "A status"  %>
          </div>
        
    </div>
  </div>
  <div class="card-footer">
    <%= btn_submit(f) %>
    <%= link_to "Voltar", a_eventos_animais_path, class: "btn btn-light" %>
  </div>
</div>
<% end %>